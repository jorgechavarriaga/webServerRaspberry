{% extends 'base.html' %}

{% block title %}Send message to a LCD Matrix{% endblock%}
{% block content %}
<style>
textarea {
  resize: none;
}
</style>
<div class="container">
    <form action="" method="post">
       <div class="form-group">
          <label for="name" class="form-label">Name: </label>
          <input type="text" class="form-control" id="name" name="name"/>
       </div>
       <div class="form-group">
	  <label for="language" class="form-label">Choose a language:</label>
		<select name="language" class="form-control" id="language">
			<option value="en">English</option>
			<option value="fr">French</option>
			<option value="es">Spanish</option>
		</select>
       </div>
	language<label for="exampleDataList" class="form-label">Datalist example</label>
	<input class="form-control" list="datalistOptions" id="exampleDataList" placeholder="Type to search...">
	<datalist id="datalistOptions">
	  <option value="San Francisco">
	  <option value="New York">
	  <option value="Seattle">
	  <option value="Los Angeles">
	  <option value="Chicago">
	</datalist>
       <div class="form-group">
	  <label for="message" class="form-label">Message: </label>
	  <textarea id="message" class="form-control" name="message" rows="3" cols="30" maxlength="90" placeholder="Enter message here"></textarea>
       </div><br>
       <div class="form-group">
	    <button type="submit" class="btn btn-primary">Submit</button>
       </div>
    </form>
</div>
{% endblock %}
